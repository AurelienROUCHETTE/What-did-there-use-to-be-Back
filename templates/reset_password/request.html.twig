{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password.title2'|trans }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>{{ 'reset_password.title2'|trans }}</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                {{ 'reset_password.seventh_message'|trans }}
            </small>
        </div>
        <button class="btn btn-secondary">{{ 'reset_password.button'|trans }}</button>
        </div>
        <div>
        <a  class="btn btn-secondary mt-5" href="{{ path('app_login') }}">{{ 'reset_password.back'|trans }}</a>.
        </div>
        </div>
        </div>


    {{ form_end(requestForm) }}
{% endblock %}
