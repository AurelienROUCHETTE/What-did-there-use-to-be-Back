{{ form_start(form) }}
	{{ form_widget(form) }}
		{% if picture.picture is not empty %}
			<div class="row">
				<div class="col d-flex justify-content-center align-items-center">
    				<img src="{{ asset('assets/pictures/' ~ picture.picture) }}" class="img-edit mx-5" alt="Additional Picture">
    			</div>
			</div>
		{% endif %}
			<div class="row">
				<div class="col d-flex flex-column flex-md-row mx-md-3 my-md-2 align-items-md-start">
					<button class="btn btn-lg btn-success text-white mb-2">
						{# Cell phone #}
						{# <div class="d-block d-sm-none">{{ button_label|default(' '|trans) }}<i class="bi bi-check-square-fill"></i></div> #}
						{# Else #}
						<div class="d-block">{{ button_label|default('button.submit'|trans) }}</div>
					</button>
					<a class="btn btn-lg btn-secondary text-white mb-2 mx-md-2" href="{{ path('app_picture_index') }}">
						{# Cell phone #}
						{# <div class="d-block d-sm-none"><i class="bi bi-backspace-fill"></i></div> #}
						{# Else #}
						<div class="d-sm-block">{{ 'button.back'|trans }}</div>
					</a>
				</div>
			</div>
		{# {% endif %} #}
{{ form_end(form) }}
