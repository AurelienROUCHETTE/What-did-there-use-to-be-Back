{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'memory.title'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ memory.id }}</td>
            </tr>
            <tr>
                <th>{{ 'memory.article.title'|trans }}</th>
                <td>{{ memory.title }}</td>
            </tr>
            <tr>
                <th>{{ 'memory.content'|trans }}</th>
                <td>{{ memory.content }}</td>
            </tr>
            <tr>
                <th>{{ 'memory.main_picture'|trans }}</th>
                <td>{{ memory.mainPicture }} <img src="{{ asset('assets/pictures/' ~ memory.mainPicture) }}" class="img-thumbnail mx-5" alt="Main Picture"></td>
            </tr>
            <tr>
                <th>{{ 'memory.picture_date'|trans }}</th>
                <td>{{ memory.pictureDate ? memory.pictureDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'memory.place'|trans }}</th>
                <td>{{ memory.place.name }} {{ memory.place.type }}</td>
            </tr>
            <tr>
                <th>{{ 'memory.address'|trans }}</th>
                <td>{{ memory.location.street }} {{ memory.location.zipcode }} {{ memory.location.city }}</td>
            </tr>
            <tr>
                <th>{{ 'memory.user'|trans }}</th>
                <td>{{ memory.user.firstname }} {{ memory.user.lastname }}</td>
            </tr>
            {% if memory.picture is not empty %}>
		{% for picture in memory.picture %}
            <tr>
                <th>{{ 'memory.additional_picture'|trans }}</th>
                <td>{{ picture.picture }} <img src="{{ asset('assets/pictures/' ~ picture.picture) }}" class="img-thumbnail mx-5" alt="Additional Picture"></td>
            </tr>
        {% endfor %}
		{% endif %}
        </tbody>
    </table>
    <div class="row">

        <div class="ms-5 col-2">
            <a class="btn btn-lg btn-secondary text-white d-inline-block" href="{{ path('app_memory_index') }}">{{ 'button.back'|trans }}</a>
        </div>
        <div class="col-1">
            <a class="btn btn-lg btn-success" href="{{ path('app_memory_edit', {'id': memory.id}) }}">{{ 'button.edit'|trans }}</a>
        </div>
        <div class="col-1">
            {{ include('back/memory/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
