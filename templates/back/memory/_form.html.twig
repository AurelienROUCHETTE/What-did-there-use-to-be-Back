{{ form_start(form) }}
	{{ form_widget(form) }}
	<div class="row">
		<div class="col d-flex">
	 	{% if memory.picture is not empty %}
			{% for picture in memory.picture %}
				<div class="col-3 d-flex flex-column align-items-center">
					<img src="{{ asset('assets/pictures/' ~ picture.picture) }}" class="img-thumbnail mx-5" alt="Additional Picture">
					<a href="{{ path ('app_picture_delete', {'id':picture.id} )}}">
						<i class="bi bi-trash-fill align-items-center" style="font-size: 1.5rem; color:#dc3646;"></i>
					</a>
				</div>
			{% endfor %}
		{% endif %}
		</div>
	</div>
		<div class="row">
			<div class="col d-flex flex-column flex-md-row mx-md-3 my-md-2 align-items-md-start">
				<button class="btn btn-lg btn-success text-white mb-2">
					{# Cell phone #}
					{# <div class="d-block d-sm-none">{{ button_label|default(' '|trans) }}<i class="bi bi-check-square-fill"></i></div> #}
					{# Else #}
					<div class="d-block">{{ button_label|default('button.submit'|trans) }}</div>
				</button>
				<a class="btn btn-lg btn-secondary text-white mb-2 mx-md-2" href="{{ path('app_memory_index') }}">
					{# Cell phone #}
					{# <div class="d-block d-sm-none"><i class="bi bi-backspace-fill"></i></div> #}
					{# Else #}
					<div class="d-sm-block">{{ 'button.back'|trans }}</div>
				</a>
			</div>
		</div>
{{ form_end(form) }}

