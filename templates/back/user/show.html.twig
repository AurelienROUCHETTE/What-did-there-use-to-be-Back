{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'user.title'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ 'user.firstname'|trans }}</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>{{ 'user.lastname'|trans }}</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>{{ 'user.email'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            {# <tr>
                <th>{{ 'user.password'|trans }}</th>
                <td>{{ user.password }}</td>
            </tr> #}
            <tr>
                <th>{{ 'user.role'|trans }}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {# <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr> #}
        </tbody>
    </table>
        <div class="row">

            <div class="col d-flex flex-column flex-md-row mx-3 my-2 align-items-md-start">
                <a class="btn btn-lg btn-secondary text-white d-inline-block mb-2 mx-md-3" href="{{ path('app_user_index') }}">
                {# Cell phone #}
                {# <div class="d-block d-sm-none"><i class="bi bi-backspace-fill"></i></div> #}
                {# Else #}
                <div class="d-block">{{ 'button.back'|trans }}</div>
                </a>
        
                <a class="btn btn-lg btn-warning text-white" href="{{ path('app_user_edit', {'id': user.id}) }}">
                {# Cell phone #}
                {# <div class="d-block d-sm-none"><i class="bi bi-pencil-fill"></i></div> #}
                {# Else #}
                <div class="d-block">{{ 'button.edit'|trans }}</div>
                </a>
            </div>

        </div>

            <div class="px-3 col col-md-2 d-md-inline-block div-btn-delete">
                {{ include('back/user/_delete_form.html.twig') }}
            </div>

{% endblock %}
