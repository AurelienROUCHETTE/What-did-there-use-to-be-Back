{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'register.registration_page'|trans }}</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
      {{form_row(registrationForm.firstname, {
        label : 'user_access.firstname'
        }) }}
        {{form_row(registrationForm.lastname, {
        label : 'user_access.lastname'
        }) }}
        {{ form_row(registrationForm.email, {
            label: 'user_access.email'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'user_access.password'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'register.terms'
        }) }}

        <button type="submit" class="btn">{{ 'register.button'|trans }}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
